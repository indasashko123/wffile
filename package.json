  "scripts": {
    "build": "nest build",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "test": "jest --forceExit --ci --maxWorkers=2",
    "test:local:up": "docker-compose --env-file .env.test -f docker-compose.test.yaml up -d ",
    "test:local:down": "docker-compose --env-file .env.test -f docker-compose.test.yaml down -v",
    "test:local": "npm run test:local:up && (jest --forceExit || true) && npm run test:local:down",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:log": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:log --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:sync": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:sync --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:cache-clear": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js cache:clear --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:migration-generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate ./src/infrastructure/postgres/typeorm/migrations/components/RENAME_ME --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:migration-run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:migration-revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert --dataSource ./src/infrastructure/postgres/typeorm/migrations/data-source.ts",
    "typeorm:migration-create": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create  ./src/infrastructure/postgres/typeorm/migrations/components/RENAME_ME"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/websockets": "^11.1.6",
    "@sentry/nestjs": "^10.11.0",
    "@sentry/node": "^10.11.0",
    "@sentry/profiling-node": "^10.11.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@sentry/types": "^10.11.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.17.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
